{
  "name": "@johanc/coved",
  "version": "1.0.0",
  "author": "Johan Cervantes <johanc@mit.edu>",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/johancc/Apollo",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "husky install",
    "build": "cd packages/client && yarn build && cd ../server && yarn build && cd ../..",
    "start": "cd packages/server && yarn start",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run --parallel lint",
    "lint": "yarn run workspaces lint",
    "release": "lerna publish"
  },
  "lint-staged": {
    "**/*.+{ts|tsx}": [
      "prettier --write --single-quote",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "lint-staged": "^10.5.3",
    "rimraf": "^3.0.1"
  },
  "devDependencies": {
    "husky": "^5.0.6",
    "lerna": "^3.20.2",
    "mongodb-memory-server": "^6.9.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
